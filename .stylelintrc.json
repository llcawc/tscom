{
  "extends": ["stylelint-config-standard-scss", "stylelint-config-twbs-bootstrap", "stylelint-config-clean-order"],
  "plugins": ["stylelint-scss"],
  "rules": {
    "at-rule-empty-line-before": [
      "always",
      { "except": ["after-same-name"], "ignore": ["after-comment", "first-nested"] }
    ],
    "declaration-block-no-redundant-longhand-properties": [true, { "ignoreShorthands": ["inset"] }],
    "font-family-name-quotes": "always-unless-keyword",
    "at-rule-no-unknown": null,
    "declaration-no-important": null,
    "no-descending-specificity": null,
    "property-no-vendor-prefix": null,
    "scss/at-rule-no-unknown": true,
    "scss/at-else-empty-line-before": null,
    "scss/at-mixin-parentheses-space-before": null,
    "scss/no-global-function-names": null,
    "selector-max-id": 2,
    "selector-class-pattern": null,
    "selector-id-pattern": null,
    "selector-no-qualifying-type": [true, { "ignore": ["attribute", "class", "id"] }]
  }
}
